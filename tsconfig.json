{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES5", "ES6", "ES7"],
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "outDir": "./build",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "build", "coverage"]
}
